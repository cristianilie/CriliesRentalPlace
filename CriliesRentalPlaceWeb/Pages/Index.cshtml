@page
@model IndexModel
@{
    ViewData["Title"] = "Cristache's Rental Place";
}

<div class="container ">
    <div class="form-row displayRow">

        @if (Model.ProductCategories.Count() > 0)
        {
        <div class="form-inline mb-3">
            <label>
                Category 
                <select class="form-control" id="productCategories">
                    @foreach (var category in Model.ProductCategories)
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                </select>
            </label>
        </div>
        }
        <label>
        Start Date
        <input class="filtersInputHeight" type="date" asp-for="@Model.StartDate" />
        </label>
        <label>
            End Date
            <input class="filtersInputHeight" type="date" asp-for="@Model.EndDate" />
        </label>

        <div class="input-group mb-3 w-25">
            <input type="text" class="form-control" placeholder="Search" aria-label="Searxhxx" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <a class="input-group-text btn btn-primary text-light" id="basic-addon2">Search</a>
            </div>
        </div>
    </div>

    <div class="card-deck pl-0 pr-0">

        @foreach (var item in Model.AvailableProducts)
        {
            string imagePath = "images/" + (item.ImagePath ?? "defaultImage.jpg");
            string productDescription = item.Description.Length > 30 ? item.Description.Substring(0, 30) + ".." : item.Description;
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-img-top" style="background: url(@imagePath) no-repeat center; background-size: cover; width: 100%; height:200px;"></div>
            <div class="card-body">
                <h4 hidden class="card-title">@item.ProductId</h4>
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text">@productDescription </p>
                <a asp-page="/RentProduct"
                   asp-route-productId="@item.ProductId"
                   asp-route-startDate="@Model.StartDate.ToShortDateString()"
                   asp-route-endDate="@Model.EndDate.ToShortDateString()"
                   class="btn btn-primary">Rent Product</a>
            </div>
        </div>


        }

    </div>
</div>
