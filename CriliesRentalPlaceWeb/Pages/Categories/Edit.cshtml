@page "{id:int?}"
@model CriliesRentalPlaceWeb.Pages.Categories.EditModel
@{
    string pageHeader = Model.Category.Id > 0 ? "Edit Category" : "Create Category";
    string pageButton = Model.Category.Id > 0 ? "Update" : "Create";
    ViewData["Title"] = pageHeader;
}


<h1>@pageHeader</h1>


<form method="post" class="mt-3" enctype="multipart/form-data" asp-page-handler="OnPost">

    <input hidden asp-for="Category.Id" />
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group row">
        <label asp-for="Category.Title" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Category.Title" class="form-control" placeholder="Title">
            <span asp-validation-for="Category.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">@pageButton</button>
            <a asp-page="/Products/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>